<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_seat_geek_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/seat_geek_item_height"
    android:layout_marginTop="@dimen/seat_geek_item_margin_top"
    android:background="@color/offWhite"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_seat_geek_item_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/seat_geek_item_img_margin_start"
        android:src="@drawable/no_cover"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/seat_geek_item_info_margin_start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_seat_geek_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_seat_geek_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_seat_geek_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/fav_heart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/md_heart"
        android:visibility="gone"
        />

</LinearLayout>